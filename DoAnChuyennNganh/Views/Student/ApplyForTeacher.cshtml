@model TeacherApplication

<div class="container mt-4">
    <h2>Đăng ký làm giảng viên</h2>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <form asp-action="ApplyForTeacher" method="post" class="form-box" enctype="multipart/form-data">
        <input asp-for="UserId" value="@ViewBag.UserId" class="form-control" hidden />
        <div class="form-group">
            <label asp-for="FullName">Họ và tên</label>
            <input asp-for="FullName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" value="@ViewBag.Username" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Số điện thoại</label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Address">Địa chỉ</label>
            <input asp-for="Address" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Degree">Bằng cấp</label>
            <input asp-for="Degree" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Major">Chuyên ngành</label>
            <input asp-for="Major" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="TeachingExperience">Kinh nghiệm giảng dạy</label>
            <textarea asp-for="TeachingExperience" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label for="Files">Tải lên minh chứng (lưu ý file tải phải là file PDF)</label>
            <input type="file" name="files" class="form-control" multiple accept=".pdf" />
        </div>
        <button type="submit" class="btn btn-primary">Gửi đơn</button>
    </form>
</div>
