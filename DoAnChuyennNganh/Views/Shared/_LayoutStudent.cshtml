@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="Untree.co">
    <link rel="shortcut icon" href="favicon.png">

    <meta name="description" content="" />
    <meta name="keywords" content="bootstrap, bootstrap4" />

    <link href="https://fonts.googleapis.com/css2?family=Display+Playfair:wght@400;700&family=Inter:wght@400;700&display=swap" rel="stylesheet">


    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

    <link rel="stylesheet" href="/Layoutstudent/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Layoutstudent/css/animate.min.css">
    <link rel="stylesheet" href="/Layoutstudent/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/Layoutstudent/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="/Layoutstudent/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="/Layoutstudent/fonts/icomoon/style.css">
    <link rel="stylesheet" href="/Layoutstudent/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="/Layoutstudent/css/aos.css">
    <link rel="stylesheet" href="/Layoutstudent/css/style.css">

    <title>Learner Free Bootstrap Template by Untree.co</title>
</head>
<body>

    <div class="site-mobile-menu">
        <div class="site-mobile-menu-header">
            <div class="site-mobile-menu-close">
                <span class="icofont-close js-menu-toggle"></span>
            </div>
        </div>
        <div class="site-mobile-menu-body"></div>
    </div>



    <nav class="site-nav mb-5">
        <div class="pb-2 top-bar mb-3">
            <div class="container">
                <div class="row align-items-center">

                    <div class="col-6 col-lg-9">
                        <a href="#" class="small mr-3"><span class="icon-question-circle-o mr-2"></span> <span class="d-none d-lg-inline-block">Have a questions?</span></a>
                        <a href="#" class="small mr-3"><span class="icon-phone mr-2"></span> <span class="d-none d-lg-inline-block">10 20 123 456</span></a>
                        <a href="#" class="small mr-3"><span class="icon-envelope mr-2"></span> <span class="d-none d-lg-inline-block">khongtontai@gmail.com</span></a>
                    </div>

                </div>
            </div>
        </div>
        <div class="sticky-nav js-sticky-header">
            <div class="container position-relative">
                <div class="site-navigation text-center">
                    <a href="#" class="logo menu-absolute m-0">
                        <img src="/images/logo2.png" alt="Learner Logo" style="height: 40px; vertical-align: middle;">
                        Learner<span class="text-primary">.</span>
                    </a>
                    <ul class="js-clone-nav d-none d-lg-inline-block site-menu">
                        <li class="active"><a asp-controller="Home" asp-action="Index">Trang Chủ</a></li>
                        <li><a class="nav-link" asp-controller="Student" asp-action="Chatbot">Chatbot Tư Vấn</a></li>
                        
                        <li class="has-children">
                            <a href="#">Khóa học</a>
                            <ul class="dropdown">
                                <li><a asp-area="" asp-controller="Student" asp-action="ListCourses">Danh sách khóa học</a></li>
                                <li><a asp-area="" asp-controller="Student" asp-action="ListCoursesUser">Khóa học đã mua</a></li>
                                @if (User.IsInRole("GiangVien") || User.IsInRole("QuanTriVien") || User.IsInRole("Admin"))
                                {
                                    <li><a asp-area="" asp-controller="Courses" asp-action="ListCourses">Quản lý khóa học</a></li>
                                }
                            </ul>
                        </li>
                        @if (User.IsInRole("QuanTriVien") || User.IsInRole("Admin"))
                        {
                            <li><a asp-area="" asp-controller="Admin" asp-action="Index">Trang Admin</a></li>
                        }
                        
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li><a asp-area="" asp-controller="Student" asp-action="History">Lịch sử giao dịch</a></li>
                            <li class="has-children">
                                <a id="manage" class="nav-link text-warning" >Hello @UserManager.GetUserName(User)!</a>
                                <ul class="dropdown">
                                    <li><a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Thông tin tài khoản</a></li>
                                    <li><a asp-area="Identity" asp-page="/Account/Manage/SetPassword">Đổi mật khẩu</a></li>
                                    @if (User.IsInRole("HocVien"))
                                    {
                                        <li><a asp-area="" asp-controller="Student" asp-action="ApplyForTeacher">Đăng ký làm giảng viên</a></li>
                                    }
                                    <li>
                                        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning" id="register" asp-area="Identity" asp-page="/Account/Register"><span class="icon-person"></span> Đăng Ký</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-warning" id="login" asp-area="Identity" asp-page="/Account/Login"> <span class="icon-lock"></span> Đăng nhập</a>
                            </li>
                        }
                    </ul>

                    <a href="#" class="burger ml-auto float-right site-menu-toggle js-menu-toggle d-inline-block d-lg-none light" data-toggle="collapse" data-target="#main-navbar">
                        <span></span>
                    </a>

                </div>
            </div>
        </div>
    </nav>
    <!-- Background Image Section -->
    <div class="untree_co-hero overlay" style="background-image: url('/Layoutstudent/images/hero-img-1-min.jpg'); height: 100px;">
    </div>

    <!-- Main Content Section with White Background -->
    <div class="container " style="background-color: #fff; border-radius: 8px;">
        @RenderBody()
    </div>
    <br />
    <br />
    <br />
    <div class="site-footer">

        <div class="container">

            <div class="row">
                <div class="col-lg-3 mr-auto">
                    <div class="widget">
