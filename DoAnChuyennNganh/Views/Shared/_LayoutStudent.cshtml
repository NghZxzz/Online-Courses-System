    <script src="/Layoutstudent/js/jquery.fancybox.min.js"></script>
    <script src="/Layoutstudent/js/jquery.sticky.js"></script>
    <script src="/Layoutstudent/js/aos.js"></script>
    <script src="/Layoutstudent/js/custom.js"></script>

</body>

</html>
