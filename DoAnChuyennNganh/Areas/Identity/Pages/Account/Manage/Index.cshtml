@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<h3>Thông tin tài khoản</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Tài khoản của bạn" disabled />
                <label asp-for="Username" class="form-label">Email</label>
            </div>
            <div class="form-group">
                <input asp-for="Input.FirstName" class="form-control" placeholder="Hãy nhập Tên của bạn." />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.LastName" class="form-control" placeholder="Hãy nhập Họ của bạn." />
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Hãy nhập số điện thoại của bạn." />
                <label asp-for="Input.PhoneNumber" class="form-label">Số Điện Thoại</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Lưu</button>
        </form>
    </div>
</div>

