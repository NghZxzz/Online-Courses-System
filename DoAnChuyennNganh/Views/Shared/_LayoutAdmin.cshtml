<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Focus - Bootstrap Admin Dashboard </title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="./images/favicon.png">
    <link href="/Layoutadmin/vendor/pg-calendar/css/pignose.calendar.min.css" rel="stylesheet">
    <link href="/Layoutadmin/vendor/chartist/css/chartist.min.css" rel="stylesheet">
    <link href="/Layoutadmin/css/style.css" rel="stylesheet">

</head>

<body>

    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>
    <!--*******************
        Preloader end
    ********************-->
    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper">

        <!--**********************************
            Nav header start
        ***********************************-->
        <div class="nav-header">
            <a href="#" class="brand-logo">
                <img class="logo-abbr" src="/images/logo2.png" alt="">
                - Learner
            </a>

            <div class="nav-control">
                <div class="hamburger">
                    <span class="line"></span><span class="line"></span><span class="line"></span>
                </div>
            </div>
        </div>
        <!--**********************************
            Nav header end
        ***********************************-->
        <!--**********************************
            Header start
        ***********************************-->
        <div class="header">
            <div class="header-content">
                <nav class="navbar navbar-expand">
                    <div class="collapse navbar-collapse justify-content-between">
                        <div class="header-left">
                            <div class="search_bar dropdown">
                                <span class="search_icon p-3 c-pointer" data-toggle="dropdown">
                                    <i class="mdi mdi-magnify"></i>
                                </span>
                                <div class="dropdown-menu p-0 m-0">
                                    <form>
                                        <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                                    </form>
                                </div>
                            </div>
                        </div>

                        <ul class="navbar-nav header-right">
                            <li class="nav-item dropdown notification_dropdown">
                                <a class="nav-link" href="#" role="button" data-toggle="dropdown">
                                    <i class="mdi mdi-bell"></i>
                                    <div class="pulse-css"></div>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="all-notification" href="#">
                                        See all notifications <i class="ti-arrow-right"></i>
                                    </a>
                                </div>
                            </li>
                            <li class="nav-item dropdown header-profile">
                                <a class="nav-link" href="#" role="button" data-toggle="dropdown">
                                    <i class="mdi mdi-account"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a href="./page-login.html" class="dropdown-item">
                                        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
                                        </form>
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
        <!--**********************************
            Header end ti-comment-alt
        ***********************************-->
        <!--**********************************
            Sidebar start
        ***********************************-->
        <div class="quixnav">
            <div class="quixnav-scroll">
                <ul class="metismenu" id="menu">
                    <li class="nav-label first">Main Menu</li>
                    <!-- <li><a href="index.html"><i class="icon icon-single-04"></i><span class="nav-text">Dashboard</span></a>
                    </li> -->
                    <li><a asp-area="" asp-controller="Home" asp-action="index"><i class="icon icon-app-store"></i><span class="nav-text">Trang Chủ</span></a></li>

                    <li class="nav-label">Quản lý</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                                <i class="icon icon-single-04"></i><span class="nav-text">Quản Lý User</span>
                            </a>
                            <ul aria-expanded="false">
                                <li><a asp-area="" asp-controller="Admin" asp-action="QuanLyUser">Quản Lý Người Dùng</a></li>
                                <li><a asp-area="" asp-controller="Admin" asp-action="ReviewApplications">Xét duyệt giảng viên</a></li>
                            </ul>
                        </li>
                        <li>
                            <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                                <i class="icon icon-book-open-2"></i><span class="nav-text">Quản Lý Chủ Đề</span>
                            </a>
                            <ul aria-expanded="false">
                                <li><a asp-area="" asp-controller="Admin" asp-action="QuanLySubject">Dánh sách chủ đề</a></li>
                            </ul>
                        </li>
                        <li><a asp-area="" asp-controller="Admin" asp-action="Statistics"><i class="icon icon-chart-bar-33"></i><span class="nav-text">Thống kê</span></a></li>
                    }
                    <li>
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon icon-house-search-engine"></i><span class="nav-text">Quản Lý Khóa Học</span>
                        </a>
                        <ul aria-expanded="false">
                            <li><a asp-area="" asp-controller="Admin" asp-action="PendingCourses">Danh sách khóa học đang chờ duyệt</a></li>
                            <li><a asp-area="" asp-controller="Admin" asp-action="ApprovedCourses">Danh sách khóa học đã duyệt</a></li>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
        <!--**********************************
            Sidebar end
        ***********************************-->
        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
        <!--**********************************
            Content body end
        ***********************************-->
        <!--**********************************
            Footer start
        ***********************************-->
        <div class="footer">
            <div class="copyright">
                <p>Copyright Â© Designed &amp; Developed by <a href="#" target="_blank">Quixkit</a> 2019</p>
                <p>Distributed by <a href="https://themewagon.com/" target="_blank">Themewagon</a></p>
            </div>
        </div>
        <!--**********************************
            Footer end
        ***********************************-->
        <!--**********************************
           Support ticket button start
        ***********************************-->
        <!--**********************************
           Support ticket button end
        ***********************************-->


    </div>
    <!--**********************************
        Main wrapper end
    ***********************************-->
    <!--**********************************
        Scripts
    ***********************************-->
    <!-- Required vendors -->
    @RenderSection("Scripts", required: false)
    <script src="/Layoutadmin/vendor/global/global.min.js"></script>
    <script src="/Layoutadmin/js/quixnav-init.js"></script>
    <script src="/Layoutadmin/js/custom.min.js"></script>

    <script src="/Layoutadmin/vendor/chartist/js/chartist.min.js"></script>

    <script src="/Layoutadmin/vendor/moment/moment.min.js"></script>
    <script src="/Layoutadmin/vendor/pg-calendar/js/pignose.calendar.min.js"></script>


    <script src="/Layoutadmin/js/dashboard/dashboard-2.js"></script>
    <!-- Circle progress -->

</body>

</html>