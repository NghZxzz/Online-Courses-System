@model DoAnChuyennNganh.Models.Sections // Thay YourNamespace bằng namespace của bạn

@{
    ViewData["Title"] = "Thêm Phần";
}
<div>
    <button class="btn btn-primary py-2 px-3" style="margin-bottom: 0.5cm; border-radius: 15px;" onclick="history.back()">Quay lại</button>
</div>
<h2>Thêm Phần</h2>

<form asp-action="CreateSection" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="CoursesId" value="@ViewBag.CourseId" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Thêm</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}